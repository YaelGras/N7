package src.Menus;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.event.*;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.*;

public class MenuLancement extends Menu {

	private JFrame fenetre;
	private MenuPrincipal menu_princ;
	private Commande_Retour retour;
	private Commande_NewGame newGame;
	private Commande_LoadGame loadGame;
	private Commande_Scenario scenarios;
	
	public MenuLancement(JFrame fenetre, MenuPrincipal menu_princ) {
		super();
		this.fenetre = fenetre;
		this.menu_princ = menu_princ;
		
		this.setBounds(0, 0, this.fenetre.getWidth(), this.fenetre.getHeight());
		this.setLayout(null);
		
		this.retour = new Commande_Retour(this.fenetre, menu_princ, this);
		this.newGame = new Commande_NewGame(this.fenetre);
		this.loadGame = new Commande_LoadGame(this.fenetre);
		this.scenarios = new Commande_Scenario(this.fenetre);
		
		this.add(this.newGame);
		this.add(this.loadGame);
		this.add(this.scenarios);
		this.add(this.retour);
		
		this.fenetre.getContentPane().add(this);
		this.fenetre.addComponentListener(this);
		super.effacer();
	}
	
	
	@Override
	public void componentResized(ComponentEvent e) {
		this.setBounds(0, 0, this.fenetre.getWidth(), this.fenetre.getHeight());
		
		int largeur = this.getWidth()/2;
		int hauteur = 2*this.getHeight()/13;
		
		this.newGame.setBounds(this.getWidth()/4, 2*this.getHeight()/11, largeur, hauteur);
		this.loadGame.setBounds(this.getWidth()/4, 3*this.getHeight()/7, largeur, hauteur);
		this.scenarios.setBounds(this.getWidth()/4, 5*this.getHeight()/7, largeur, hauteur);
		this.retour.setBounds(750*this.getWidth()/960, 16*this.getHeight()/540, 
				200*this.getWidth()/960, hauteur/2);
	}

	public void paintComponent(Graphics g)
    {
        //Chargement de l"image de fond
        try {
        	super.paintComponent(g);
            Image img = ImageIO.read(new File("Fond_Menu_Lancement.png"));
            g.drawImage(img, 0, 0, this.fenetre.getWidth(), this.fenetre.getHeight(), this.fenetre);
        } catch (IOException e) {
            e.printStackTrace();
            System.out.println("Erreur image de fond: " + e.getMessage());
        }
    }
}
