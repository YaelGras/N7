package src.Menus;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class Commande_Jouer extends JButton implements Commande {

	private JFrame fenetre;
	private MenuPrincipal menu;
	
	
	public Commande_Jouer(JFrame fenetre, MenuPrincipal menu) {
		super();
		this.fenetre = fenetre;
		this.menu = menu;
		
		//this.setText(this.getNom());
		//this.setFont(new Font("Arial", Font.BOLD, 30));
		//this.setForeground(Color.BLACK);
		
		this.setOpaque(false);
		this.setContentAreaFilled(false);
		
		this.addActionListener(new actionJouer(this));
		
	}
	
	@Override
	public void executer() {
		this.menu.effacer();
		this.fenetre.add(new JTextArea("En cours de construction"));
	}

	@Override
	public String getNom() {
		return "Jouer";
	}

	static class actionJouer implements ActionListener {
		private Commande_Jouer modele;
		
		public actionJouer(Commande_Jouer bouton) {
			this.modele = bouton;
		}
		@Override
		public void actionPerformed(ActionEvent arg0) {
			this.modele.executer();
		}
		
	}

	
	

}
