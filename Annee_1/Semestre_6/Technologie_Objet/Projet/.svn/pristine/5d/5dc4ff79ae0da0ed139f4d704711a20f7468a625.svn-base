package src;

import javax.swing.JButton;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;


public class Commande_Retour extends JButton implements Commande {

	private JFrame fenetre;
	private JPanel menu_avant, menu_courant;
	
	public Commande_Retour(JFrame fenetre, JPanel menu_avant, JPanel menu_courant) {
		super();
		this.fenetre = fenetre;
		this.menu_avant = menu_avant;
		this.menu_courant = menu_courant;
		this.setText(this.getNom());
		
		this.setOpaque(false);
		this.setContentAreaFilled(false);
		
		this.addActionListener(new actionRetour(this));
		
		this.setVisible(true);
	}
	
	
	@Override
	public void executer() {
		this.menu_avant.setVisible(true);
		this.menu_courant.setVisible(false);
	}

	@Override
	public String getNom() {
		return "Retour";
	}
	
	static class actionRetour implements ActionListener {
		private Commande_Retour modele;
		
		public actionRetour(Commande_Retour bouton) {
			this.modele = bouton;
		}
		@Override
		public void actionPerformed(ActionEvent arg0) {
			this.modele.executer();
		}
		
	}

}
