package src.affichagePartie;

import javax.swing.*;


public class affichage_titre extends JPanel {
    private static resizeFontJlabel name, day, time;
    

    public affichage_titre() {
        super();
        this.setLayout(null);

        name = new resizeFontJlabel("Nom Partie");
        day = new resizeFontJlabel("1 janvier 2000");
        time = new resizeFontJlabel("00 : 00");

        name.setHorizontalAlignment(SwingConstants.CENTER);
        day.setHorizontalAlignment(SwingConstants.CENTER);
        time.setHorizontalAlignment(SwingConstants.CENTER);

        this.add(name);
        this.add(day);
        this.add(time);
        
        this.setVisible(true);
    }

    // Cela permets d'update le titre de la partie et l'heure sans devoir cr√©er d'instance dans la classe appelante.
    public static void updateTitle(String nomPartie) {
        name.setText(nomPartie);
    }

    public static void updateDay(String date) {
        day.setText(date);
    }

    public static void updateTime(String horaire) {
        time.setText(horaire);
    }

    public void updatePosition() {
        name.setBounds(0, 0, this.getWidth(), 3*this.getHeight()/5);
        day.setBounds(0, 3*this.getHeight()/5, this.getWidth()/2, 2*this.getHeight()/5);
        time.setBounds(this.getWidth()/2, 3*this.getHeight()/5, this.getWidth()/2, 2*this.getHeight()/5);

        name.updateFont();
        day.updateFont();
        time.updateFont();
    }
}
