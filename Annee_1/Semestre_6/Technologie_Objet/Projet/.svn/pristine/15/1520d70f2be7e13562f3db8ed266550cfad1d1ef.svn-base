package src;

import javax.swing.*;
import java.awt.*;
import javax.swing.event.*;
import java.awt.event.*;
import java.util.*; 


public class MenuPrincipal extends JPanel {
	
	private JFrame fenetre;	
	private Commande_Jouer jouer;
	private Commande_Parametre parametre;
	private Commande_Quitter quitter;
	
	
	public MenuPrincipal(JFrame fenetre) {
		this.fenetre = fenetre;
		Container contenu = this.fenetre.getContentPane();
		
		this.jouer = new Commande_Jouer(this.fenetre);
		this.quitter = new Commande_Quitter(this.fenetre);
		this.parametre = new Commande_Parametre(this.fenetre);
		
		contenu.setLayout(new GridLayout(3, 1));
		
		contenu.add(this.jouer);
		contenu.add(this.parametre);
		contenu.add(this.quitter);
		
		this.afficher();
		
	}
	
	public void afficher() {
		this.setVisible(true);
	}
	
	public void effacer() {
		this.setVisible(false);
	}
}
