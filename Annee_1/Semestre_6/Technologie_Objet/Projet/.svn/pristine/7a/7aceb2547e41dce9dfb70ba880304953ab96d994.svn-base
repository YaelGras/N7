package src;

import java.awt.*;
import java.io.*;

import javax.imageio.ImageIO;
import javax.swing.*;

@SuppressWarnings("serial")
public class MenuParametre extends JPanel {
	
	private JFrame fenetre;	
	private MenuPrincipal menu;
	private Commande_Retour Retour;
	
	
	public MenuParametre(JFrame fenetre, MenuPrincipal menu) {
		super();
		this.fenetre = fenetre;
		this.menu = menu;
		
		//this.fenetre.getContentPane().add(this);
		
		
		this.setBounds(0, 0, this.fenetre.getWidth(), this.fenetre.getHeight());
		this.setLayout(null);
		this.setBackground(Color.BLUE);
		this.setForeground(Color.green);
		
		Retour = new Commande_Retour(fenetre, this.menu, this);
		
		this.add(Retour);
		
		int largeur = 2*this.getWidth()/6;
		int hauteur = this.getHeight()/7;
		
		this.Retour.setBounds(this.getWidth()/6, 5*this.getHeight()/7, largeur, hauteur);
		this.Retour.setVisible(true);
		
		JTextArea text = new JTextArea("MENU PARAMETRE EN COURS DE CONSTRUCTION");
		text.setVisible(true);
	 	this.add(text);		
		 
				
		this.setVisible(false);

	}
	
	public void afficher() {
		
		JOptionPane.showMessageDialog(this.fenetre.getContentPane(), 
				"en cours de constru");
		
		this.setVisible(true);
		
	}
	
	public void effacer() {
		this.setVisible(false);
	}
	
	
	
}
