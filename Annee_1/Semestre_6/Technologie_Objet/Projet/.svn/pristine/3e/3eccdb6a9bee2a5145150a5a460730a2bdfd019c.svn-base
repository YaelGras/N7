package src.Menus;

import java.awt.*;
import java.awt.event.ComponentEvent;
import java.awt.event.ComponentListener;
import java.io.*;

import javax.imageio.ImageIO;
import javax.swing.*;

@SuppressWarnings("serial")
public class MenuParametre extends JPanel implements ComponentListener {
	
	private JFrame fenetre;	
	private MenuPrincipal menu;
	private Commande_Retour Retour;
	
	
	public MenuParametre(JFrame fenetre, MenuPrincipal menu) {
		super();
		this.fenetre = fenetre;
		this.menu = menu;	
		
		this.setBounds(0, 0, this.fenetre.getWidth(), this.fenetre.getHeight());
		this.setLayout(null);
		
		Retour = new Commande_Retour(fenetre, this.menu, this);
		
		this.add(Retour);
		
		int largeur = 2*this.getWidth()/6;
		int hauteur = this.getHeight()/7;
		
		this.Retour.setBounds(this.getWidth()/6, 5*this.getHeight()/7, largeur, hauteur);
		
		this.fenetre.getContentPane().add(this);
		this.fenetre.addComponentListener(this);
		this.setVisible(false);

	}
	
	public void afficher() {
		
		this.setVisible(true);
		
	}
	
	public void effacer() {
		this.setVisible(false);
	}
	
	@Override
	public void componentResized(ComponentEvent e) {
		
		this.setBounds(0, 0, this.fenetre.getWidth(), this.fenetre.getHeight()); 
		
		int largeur = 2*this.getWidth()/3;
		int hauteur = this.getHeight()/7;
		
		this.Retour.setBounds(this.getWidth()/6, 5*this.getHeight()/7, largeur, hauteur);
    }

	@Override
	public void componentHidden(ComponentEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void componentMoved(ComponentEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void componentShown(ComponentEvent arg0) {
		// TODO Auto-generated method stub
		
	}
	
	
}
