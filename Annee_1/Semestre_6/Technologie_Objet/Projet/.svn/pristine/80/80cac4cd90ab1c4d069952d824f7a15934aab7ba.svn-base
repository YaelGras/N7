package src;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;

import src.Commande_Jouer.actionJouer;

public class Commande_Quitter extends JButton implements Commande {
	/**
	 * fenetre Ã  quitter si on utilise cette commande
	 */
	private JFrame fenetre;
	
	public Commande_Quitter(JFrame fenetre) {
		this.fenetre = fenetre;
		this.setName(this.getNom());
		this.addActionListener(new actionQuitter(this));

	}
	
	@Override
	public void executer() {
		this.fenetre.dispose();
	}

	@Override
	public String getNom() {
		return "Quitter";
	}

	
	static class actionQuitter implements ActionListener {
		private Commande_Quitter modele;
		
		public actionQuitter(Commande_Quitter bouton) {
			this.modele = bouton;
		}
		@Override
		public void actionPerformed(ActionEvent arg0) {
			this.modele.executer();
		}
		
	}
}
