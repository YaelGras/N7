package src;

import java.awt.Color;
import java.awt.GridLayout;

import javax.swing.JFrame;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.JTextArea;

public class MenuParametre extends JPanel {
	private JFrame fenetre;	
	
	
	
	public MenuParametre(JFrame fenetre) {
		super();
		this.fenetre = fenetre;
		
		this.setSize(this.fenetre.getSize());
		this.setLayout(new GridLayout(3,1));
		
		JTextArea text = new JTextArea("MENU PARAMETRE EN COURS DE CONSTRUCTION");
		text.setBackground(Color.BLUE);
		text.setVisible(true);
		this.add(text);
			
		
		this.setLayout(new GridLayout(3, 1));
		
			
		this.effacer();
		this.fenetre.getContentPane().add(this);
	}
	
	public void afficher() {
		this.setVisible(true);
		JOptionPane.showMessageDialog(this.fenetre.getContentPane(), 
				"en cours de constru");
	}
	
	public void effacer() {
		this.setVisible(false);
	}
}
