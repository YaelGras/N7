package src;

import java.awt.Color;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JTextArea;

public class Commande_Parametre extends JButton implements Commande {
	/**
	 * 
	 */
	private MenuParametre menu_param;
	private JFrame fenetre;
	private MenuPrincipal menu_princ;
	
	public Commande_Parametre(JFrame fenetre, MenuPrincipal menup) {
		super();
		this.fenetre = fenetre;
		this.menu_princ = menup;
		this.menu_param = new MenuParametre(this.fenetre, this.menu_princ);
		
		//this.setText(this.getNom());
		//this.setFont(new Font("Arial", Font.BOLD, 30));
		//this.setForeground(Color.WHITE);
		
		this.setOpaque(false);
		this.setContentAreaFilled(false);
		
		this.addActionListener(new actionParam(this));
	}
	
	@Override
	public void executer() {
		this.menu_princ.effacer();
		this.menu_param.afficher();
	}

	@Override
	public String getNom() {
		return "Param√®tres";
	}
	
	static class actionParam implements ActionListener {
		private Commande_Parametre modele;
		
		public actionParam(Commande_Parametre bouton) {
			this.modele = bouton;
		}
		@Override
		public void actionPerformed(ActionEvent arg0) {
			this.modele.executer();
		}
		
	}

}
