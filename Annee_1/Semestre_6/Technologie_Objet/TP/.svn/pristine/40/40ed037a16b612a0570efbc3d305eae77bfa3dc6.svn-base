package allumettes;

import java.util.ArrayList;
import java.util.List;

public abstract class StrategieAbstraite implements Strategie {
	
	private static List<StrategieAbstraite> strategie = new ArrayList<StrategieAbstraite>();

	public abstract int getPrise(Jeu jeu);

	public abstract String toString();
	
	public abstract String getNom();
	
	public static StrategieAbstraite getStrategy(String nomStrategy, String nomJoueur) {
		for (StrategieAbstraite strat : strategie) {
			if (strat.toString().equalsIgnoreCase(nomStrategy)) {
				if(!strat.getNom().contentEquals("")) {
					if(strat.getNom().equalsIgnoreCase(nomJoueur)) {
						return strat;
					}
				} else {
					return strat;
				}
			}
		}

		throw new ConfigurationException("StrategieAbstraite inconnue");
	}
	
	public static void addStrategy(StrategieAbstraite strategie) {
		StrategieAbstraite.strategie.add(strategie);
	}
	
	
}

