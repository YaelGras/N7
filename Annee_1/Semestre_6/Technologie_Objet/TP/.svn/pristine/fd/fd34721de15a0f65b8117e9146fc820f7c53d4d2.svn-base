package allumettes;

public class ExpertStrategie implements Strategie{

	@Override
	public int getPrise(Jeu jeu) {
		if(jeu.getNombreAllumettes() > 1) {
			int prise = (jeu.getNombreAllumettes() - 1)%(jeu.PRISE_MAX + 1);
			return (prise > 0 && prise <= jeu.PRISE_MAX) ? prise : 3;
		} else {
			return 1;
		}
		
	}

	public String toString() {
		return "expert";
	}

}
