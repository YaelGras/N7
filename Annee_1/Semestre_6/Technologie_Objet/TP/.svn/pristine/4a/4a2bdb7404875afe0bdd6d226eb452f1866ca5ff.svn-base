package allumettes;

import java.util.NoSuchElementException;
import java.util.Scanner;

public class HumainStrategie implements Strategie{
	private Scanner scanner;
	
	public HumainStrategie() {
		this.scanner = new Scanner(System.in);
	}
	
	@Override
	public int getPrise(Jeu jeu) {
		boolean reponseInvalide;
		int prise = 0;
		do {
			String choix = scanner.nextLine();
			try {
				prise = Integer.parseInt(choix);
				reponseInvalide = false;
			} catch (NumberFormatException e) {
				reponseInvalide = true;
				if (choix == "triche") {
					prise = -1;
					reponseInvalide = false;
				} else {
					System.out.println("Vous devez rentrer un entier");
				}
				System.err.println("Humain : un entier est attendu");
			}
		} while (reponseInvalide);
		return prise;
	}

}
