package allumettes;

import java.util.ArrayList;
import java.util.List;

public abstract class Strategie {
	
	private static List<Strategie> strategie = new ArrayList<Strategie>();

	public abstract int getPrise(Jeu jeu);

	public abstract String toString();
	
	public abstract String getNom();
	
	public static Strategie getStrategy(String nomStrategy, String nomJoueur) {
		for (Strategie strat : strategie) {
			if (strat.toString().equalsIgnoreCase(nomStrategy)) {
				if(!strat.getNom().contentEquals("")) {
					if(strat.getNom().equalsIgnoreCase(nomJoueur)) {
						return strat;
					}
				} else {
					return strat;
				}
			}
		}

		throw new ConfigurationException("Strategie inconnue");
	}
	
	public static void addStrategy(Strategie strategie) {
		Strategie.strategie.add(strategie);
	}
	
	
}

